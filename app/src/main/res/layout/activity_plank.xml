<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leo.fitnessdiy.PlankActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/layout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/plank_icon" />

            <TextView
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:text="Plank"
                android:textColor="@color/headingColor"
                android:textSize="45dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleX="-1"
                android:src="@drawable/plank_icon" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:onClick="countDownPlank"
            android:text="start" />

        <TextView
            android:id="@+id/count_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/headingColor"
            android:text=""
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:textColor="@color/headingColor"
            android:text="@string/plank_video" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openVideo"
            android:tag="https://www.youtube.com/watch?v=IODxDxX7oi4">

            <ImageView
                android:layout_width="207dp"
                android:layout_height="113dp"
                android:baselineAligned="false"
                android:src="@drawable/plank_video_1" />

            <TextView
                android:layout_width="103dp"
                android:layout_height="53dp"
                android:text="@string/plank_demo"
                android:textColor="@color/headingColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openVideo"
            android:orientation="horizontal"
            android:tag="https://www.youtube.com/watch?v=lHjj5vmzpy0">

            <ImageView
                android:layout_width="206dp"
                android:layout_height="112dp"
                android:src="@drawable/plank_video_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/headingColor"
                android:text="@string/motivation_plank" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
